{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": [
            "ESNext",
            "ESNext.Array"
        ],
        "outDir": "./out",
        "rootDir": "./src",
        "downlevelIteration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["./**/*.spec.ts"],
    "include": ["./**/*.ts"]
}